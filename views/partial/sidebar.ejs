        <li class="nav-item">
          <a href="/dash" class="nav-link <% if (page == "dash") { %>active<% } %> ">
            <i class="nav-icon fas fa-tachometer-alt"></i>
            <p>博客概览</p>
          </a>
        </li>
        <li class="nav-header">文章管理</li>
        <li class="nav-item">
          <a href="/dash/posts" class="nav-link <% if (page == "dash-posts") { %>active<% } %> ">
            <i class="nav-icon fas fa-list"></i>
            <p>文章列表</p>
          </a>
        </li>
        <li class="nav-item">
          <a href="/dash/editor/new" class="nav-link <% if (page == "dash-editor") { %>active<% } %> ">
            <i class="nav-icon fas fa-pencil-alt"></i>
            <p>撰写文章</p>
          </a>
        </li>
        <li class="nav-item">
          <a href="/dash/drafts" class="nav-link <% if (page == "dash-drafts") { %>active<% } %> ">
            <i class="nav-icon fas fa-book"></i>
            <p>草稿列表</p>
          </a>
        </li>
      </ul>
    </nav>
    <!-- /.sidebar-menu -->
