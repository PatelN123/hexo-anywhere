  <!-- Brand Logo -->
  <a href="/" class="brand-link">
    <center>
      <span class="brand-text font-weight-light">HexoAnywhere</span>
    </center>
  </a>

  <!-- Sidebar -->
  <div class="sidebar">
    <!-- Sidebar user panel (optional) -->
    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
      <div class="image">
        <img
          src="https://secure.gravatar.com/avatar/eadf60b33a61bc099af402484df02d48?s=64"
          class="img-circle elevation-2"
          alt="Avatar"
        />
      </div>
      <div class="info">
        <a href="#" class="d-block"> <%= user %> </a>
      </div>
    </div>

    <!-- Sidebar Menu -->
    <nav class="mt-2">
      <ul
        class="nav nav-pills nav-sidebar flex-column"
        data-widget="treeview"
        role="menu"
        data-accordion="false"
      >
